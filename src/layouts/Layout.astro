---
import Navbar from "../components/Navbar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body>
		<div id="page">
			<Navbar/>
			<div id="content">
				<slot />
			</div>
		</div>
	</body>

	<style lang="scss" is:global>
		:root {
			--primary-light: hsl(9 100% 70%);
			--primary: hsl(9 100% 64%);
			--primary-dark: hsl(9 80% 50%);

			--secondary-light: hsl(249 100% 80%);
			--secondary: hsl(249 70% 70%);
			--secondary-dark: hsl(249 70% 60%);

			--accent-light: hsl(129 100% 70%);
			--accent: hsl(129 100% 64%);
			--accent-dark: hsl(129 80% 50%);

			--grey-light: hsl(0 0% 75%);
			--grey: hsl(0 0% 50%);
			--grey-dark: hsl(0 0% 25%);

			--black: hsl(0 0% 12%);
			--white: hsl(0 0% 98%);
		}

		*{
			margin: 0px;
			padding: 0px;
			box-sizing: border-box;
		}

		body {
			background-color: var(--black);
			color: var(--white);
			font-family: "Courier Prime", monospace;
		}

		#page {
			width: 75vw;
			margin: auto;
			padding: 15px;
			margin-top: 15px;
		}

		
		#content {
			margin-top: 25px;
			padding: 10px;
		}
		h1 {
			font-size: 32px;
			margin: 5px 0px;
			color: var(--white);
		}

		h2 {
			font-size: 18px;
			margin: 0px;
			color: var(--grey);
		}

		p {
			margin: 25px 0px;
			color: var(--white);
		}

		body:is(.theme-light){
			background-color: var(--white);
		}
	</style>
</html>
