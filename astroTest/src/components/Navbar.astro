<script>
	let typewriterStep = 0;
	let name = "Talin Sharma";
	let speed = 100;

	function typeWriter() {
		let cursor = document.getElementById("logoCursor");
		if (typewriterStep < name.length) {
			cursor.parentNode.insertBefore(document.createTextNode(name.charAt(typewriterStep)), cursor);
			typewriterStep++;
			setTimeout(typeWriter, speed);
		} else {
			document.getElementById("logoName").innerHTML += "&thinsp;";
			setInterval(() => {
				let cursor = document.getElementById("logoCursor");
				cursor.classList.contains("on") ? cursor.classList.remove("on") : cursor.classList.add("on");
			}, 750);
		}
	}
	typeWriter();
</script>

